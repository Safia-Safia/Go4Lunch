<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="15dp"
    android:layout_marginTop="10dp"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/workmates_avatar"
        android:layout_width="62dp"
        android:layout_height="62dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/isJoining_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:textStyle="bold"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/workmates_avatar"
        app:layout_constraintStart_toEndOf="@+id/workmates_avatar"
        app:layout_constraintTop_toTopOf="@+id/workmates_avatar" />

    <View
        android:id="@+id/view_line_workmates"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_marginTop="30dp"
        android:background="#ACACAC"
        app:layout_constraintStart_toEndOf="@+id/workmates_avatar"
        app:layout_constraintTop_toBottomOf="@+id/isJoining_textView"
        />


</androidx.constraintlayout.widget.ConstraintLayout>